import org

class _Obs(org.nongnu.navidoc.util.Obs):
    def __init__(self):
	self.t = 0
    def chg(self):
	self.t += 1

def setUp():
    global o
    o = org.fenfire.swamp.impl.StdObserver()

def testObs():
    o1 = _Obs()
    assert o1.t == 0
    o1.chg()
    assert o1.t == 1

def testCallNodup():
    o1 = _Obs()
    o.addObs(1, 2, 3, o1)
    assert o1.t == 0
    o.triggerObs(1, 1, 2, 3)
    assert o1.t == 1
    o.triggerObs(-1, 1, 2, 3)
    assert o1.t == 1

